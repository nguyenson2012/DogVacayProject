<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/img_logged_in_nav_drawer_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navigation_drawer_selector_browse"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/textview_logged_in_nav_drawer_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/nav_drawer_item_text_size"
        android:layout_marginTop="@dimen/nav_drawer_item_margin_top_img_and_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_logged_in_nav_drawer_item"/>
</RelativeLayout>