<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="browse_textview">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/underline</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/browse_textview_height</item>
        <item name="android:layout_marginLeft">@dimen/browse_textview_left_margin</item>
        <item name="android:layout_marginTop">@dimen/browse_textview_top_margin</item>
        <item name="android:layout_marginRight">@dimen/browse_textview_left_margin</item>
        <item name="android:drawablePadding">@dimen/browse_textview_drawable_padding</item>
    </style>

    <dimen name="browse_textview_height">35dp</dimen>
    <dimen name="browse_textview_left_margin">15dp</dimen>
    <dimen name="browse_textview_top_margin">4dp</dimen>
    <dimen name="browse_textview_drawable_padding">10dp</dimen>
</resources>
